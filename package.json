{
    "name": "git-blog-manager",
    "displayName": "Git Blog Manager",
    "description": "A manager for git blog.",
    "version": "0.0.1",
    "publisher": "shinyypig",
    "license": "MIT",
    "icon": "assets/android-chrome-512x512.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/shinyypig/git-blog-manager"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:gitBlogManager"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "gitBlogManager",
                    "title": "Git Blog Manager",
                    "icon": "$(library)"
                }
            ]
        },
        "views": {
            "gitBlogManager": [
                {
                    "id": "draftPosts",
                    "name": "Draft Posts"
                },
                {
                    "id": "publicPosts",
                    "name": "Public Posts"
                },
                {
                    "id": "privatePosts",
                    "name": "Private Posts"
                }
            ]
        },
        "commands": [
            {
                "command": "git-blog-manager.syncAllPosts",
                "title": "Sync All Posts",
                "icon": "$(sync)"
            },
            {
                "command": "git-blog-manager.syncPost",
                "title": "Sync Post",
                "icon": "$(sync)"
            },
            {
                "command": "git-blog-manager.newPost",
                "title": "New Post",
                "icon": "$(add)"
            },
            {
                "command": "git-blog-manager.publishPost",
                "title": "Publish Post",
                "icon": "$(cloud-upload)"
            },
            {
                "command": "git-blog-manager.deletePost",
                "title": "Delete Post",
                "icon": "$(trash)"
            },
            {
                "command": "git-blog-manager.openPostURL",
                "title": "Open Post URL",
                "icon": "$(link)"
            },
            {
                "command": "git-blog-manager.hidePost",
                "title": "Hide Post",
                "icon": "$(eye-closed)"
            },
            {
                "command": "git-blog-manager.unhidePost",
                "title": "Unhide Post",
                "icon": "$(eye)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "git-blog-manager.syncAllPosts",
                    "group": "navigation@0",
                    "when": "view == draftPosts"
                },
                {
                    "command": "git-blog-manager.newPost",
                    "group": "navigation@1",
                    "when": "view == draftPosts"
                }
            ],
            "view/item/context": [
                {
                    "command": "git-blog-manager.publishPost",
                    "group": "inline@2",
                    "when": "viewItem == post && view == draftPosts"
                },
                {
                    "command": "git-blog-manager.syncPost",
                    "group": "inline@2",
                    "when": "viewItem == post && view != draftPosts"
                },
                {
                    "command": "git-blog-manager.deletePost",
                    "group": "inline@3",
                    "when": "viewItem == post"
                },
                {
                    "command": "git-blog-manager.openPostURL",
                    "group": "inline@1",
                    "when": "viewItem == post && view == publicPosts"
                },
                {
                    "command": "git-blog-manager.hidePost",
                    "group": "inline@0",
                    "when": "viewItem == post && view == publicPosts"
                },
                {
                    "command": "git-blog-manager.unhidePost",
                    "group": "inline@0",
                    "when": "viewItem == post && view == privatePosts"
                }
            ]
        },
        "configuration": {
            "title": "Git Blog Manager",
            "properties": {
                "git-blog-manager.postsRoot": {
                    "type": "string",
                    "default": "/Users/liangliang/Git/Blog",
                    "description": "The root directory of your blog posts."
                },
                "git-blog-manager.blogURL": {
                    "type": "string",
                    "default": "https://shinyypig.top/",
                    "description": "The URL of your blog website."
                },
                "git-blog-manager.defaultPostState": {
                    "type": "string",
                    "default": "private",
                    "enum": [
                        "public",
                        "private"
                    ],
                    "description": "The default state of your new post."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/test-electron": "^2.3.2",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.1.3",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}