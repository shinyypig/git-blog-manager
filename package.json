{
    "name": "git-blog-manager",
    "displayName": "git blog manager",
    "description": "A manager for git blog.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "gitBlogManager",
                    "title": "Git Blog Manager",
                    "icon": ":remote-explorer-documentation"
                }
            ]
        },
        "views": {
            "gitBlogManager": [
                {
                    "id": "publicPosts",
                    "name": "Public Posts"
                },
                {
                    "id": "privatePosts",
                    "name": "Private Posts"
                },
                {
                    "id": "draftPosts",
                    "name": "Draft Posts"
                }
            ]
        },
        "commands": [
            {
                "command": "git-blog-manager.syncPosts",
                "title": "Sync Posts",
                "icon": "$(notebook-execute-all)"
            }
        ],
        "configuration": {
            "title": "Git Blog Manager",
            "properties": {
                "git-blog-manager.postsRoot": {
                    "type": "string",
                    "default": "/Users/liangliang/Git/Blog",
                    "description": "The root directory of your blog posts."
                },
                "git-blog-manager.blogURL": {
                    "type": "string",
                    "default": "https://shinyypig.top",
                    "description": "The URL of your blog website."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "ts-loader": "^9.4.3",
        "webpack": "^5.85.0",
        "webpack-cli": "^5.1.1",
        "@vscode/test-electron": "^2.3.2"
    }
}